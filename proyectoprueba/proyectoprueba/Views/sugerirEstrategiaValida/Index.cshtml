@{
    ViewBag.Title = "Sugerir Estrategia Valida";

}
@{
    string txtObejtivo = "";

}
<h2>Sugerir Estrategia Valida</h2>

<div class="grid-x grid-padding-x">
    <div class="large-6">
        <div class="large-6 cell">
            <label>Plan de Marketing</label>
            <select>
                <option>Plan 1</option>
                <option>Plan 2</option>
                <option>Plan 3</option>
                <option>Plan 4</option>
            </select>
        </div>
        <div class="large-6 cell">
            <label>Objetivos</label>
            <select>
                <option>Plan 1</option>
                <option>Plan 2</option>
                <option>Plan 3</option>
                <option>Plan 4</option>
            </select>
        </div>
    </div>
    <div class="large-6">
        <div class="large-6 large-offset-3">
            <input type="button" value="Nueva Estrategia" class="button" data-open="exampleModal11" />
            <input type="button" value="Sugerir estrategias por comparación" class="button" />
        </div>
    </div>
    <div class="large-12">
        <table class="table-scroll">
            <thead>
                <tr>
                    <td></td>
                    <td>Estrategia</td>
                    <td>Estado</td>
                    <td>Opciones</td>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><input type="checkbox" /></td>
                    <td>Estrategia 1</td>
                    <td>Estrategia 2</td>
                    <td>Estrategia 3</td>
                </tr>
            </tbody>

        </table>
    </div>






    @*<div class="large-12" id="columnchart_material" style="height: 500px;"></div>*@
</div>

<div class="small reveal " id="exampleModal11" aria-labelledby="exampleModal11" data-reveal>
    <fieldset>
        <div class="medium-6 column">
            <h2> Registro de Estrategia</h2>
        </div>
        <div class="medium-6 column">
            <h3>Estrategia para cumplir el objetivo de @txtObejtivo</h3>
        </div>
        <div class="medium-6 column">
            <label class="label">Estrategia:</label>
            <input type="text" placeholder="Nombre Estrategia" />
        </div>
        <div class="medium-6 column">
            <label>Descripción por Estrategia:</label>
            <textarea rows="3" placeholder="Descripción de estrategia"></textarea>
        </div>
        <div class="medium-6 column">
            <label>Fecha:</label>
            <input type="text" />
        </div>
        <div class="medium-6 column">
            <h3>Factores o Rubros de la Estrategia (ingrese del 1 al 10): </h3>
        </div>
        <div class="medium-6 column">
            <div class="medium-1">
                <label>Apoyo del Área de Finanzas</label>
                <input type="text" />
            </div>
            <div class="medium-1">
                <label>Colaboración en el equipo</label>
                <input type="text" />
            </div>
            <div class="medium-1">
                <label>Apoyo de otras áreas</label>
                <input type="text" />
            </div>
            <div class="medium-1">
                <label>Puntualidad del equipo</label>
                <input type="text" />
            </div>
        </div>
    </fieldset>

    <button class="close-button" data-close aria-label="Close reveal" type="button">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

